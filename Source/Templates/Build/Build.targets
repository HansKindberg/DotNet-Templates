	<Target Name="PrepareNuGetPackages" BeforeTargets="Transform">
		<Message Importance="high" Text="Prepare: %(NuGetPackageProject.Identity)" />
		<Copy DestinationFolder="Content/%(NuGetPackageProject.Identity)" SourceFiles="Common/.editorconfig;Common/.gitignore;Common/NuGet.config;Common/ReadMe.md" />
		<Copy DestinationFolder="Content/%(NuGetPackageProject.Identity)/Source/Project" SourceFiles="Common/NuGet-Package/Source/Project/ReadMe.md" />
		<Copy Condition="%(NuGetPackageProject.DirectoryBuild)" DestinationFolder="Content/%(NuGetPackageProject.Identity)" SourceFiles="Common/NuGet-Package/Directory.Build.props;Common/Directory.Build.targets" />
		<Copy Condition="%(NuGetPackageProject.DirectoryBuild)" DestinationFolder="Content/%(NuGetPackageProject.Identity)/Source/Project" SourceFiles="Common/NuGet-Package/Source/Project/Project.csproj" />
